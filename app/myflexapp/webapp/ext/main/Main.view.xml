<mvc:View
    xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns:macros="sap.fe.macros"
    xmlns:html="http://www.w3.org/1999/xhtml"
    controllerName="pri.myflexapp.ext.main.Main"
>
    <f:DynamicPage
        id="Main"
        class="sapUiResponsiveContentPadding"
    >
        <f:title>
            <f:DynamicPageTitle id="_IDGenDynamicPageTitle1">
                <f:heading>
                    <Title
                        id="_IDGenTitle1"
                        text="Filter Bar"
                        level="H2"
                    />
                </f:heading>
                <f:snappedContent>
                    <Panel headerText="Highest Price Tiles">
                        <HeaderContainer
                            scrollStep="200"
                            showDividers="false"
                            content="{
                        path :'/Travel',
                        parameters:{
                            $filter : 'TravelStatus_code eq \'O\' and IsActiveEntity eq false or SiblingEntity/IsActiveEntity eq null',
                            $orderby : 'TotalPrice desc'
                        }
                    }"
                        >
                            <GenericTile
                                header="Travel {TravelID}"
                                subheader="{Description}"
                                press=".handlers.onTilePress"
                            >
                                <TileContent
                                    unit="{CurrencyCode_code}"
                                    footer="{to_Customer/LastName}"
                                >
                                    <NumericContent
                                        value="{TotalPrice}"
                                        valueColor="Good"
                                        scale="k"
                                    />
                                </TileContent>
                            </GenericTile>
                        </HeaderContainer>
                    </Panel>
                    <Panel headerText="Filter Count">
                        <Text text="{fbConditions>/filtersTextInfo}" />
                    </Panel>
                </f:snappedContent>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader
                id="_IDGenDynamicPageHeader1"
                pinnable="true"
            >
                <VBox id="_IDGenVBox1">
                    <macros:FilterBar
                        id="FilterBar"
                        metaPath="@com.sap.vocabularies.UI.v1.SelectionFields"
                        filterChanged=".handlers.onFiltersChanged"
                    />
                </VBox>
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <macros:Table
                id="TravelTable"
                metaPath="@com.sap.vocabularies.UI.v1.LineItem"
                contextPath="/Travel"
                enableAutoColumnWidth="true"
                enablePaste="true"
                filterBar="FilterBar"
                header="Travel"
                headerVisible="true"
                isSearchable="true"
                personalization="Sort,Column,Filter"
                readOnly="true"
                selectionMode="Single"
                type="ResponsiveTable"
                variantManagement="None"
            />
        </f:content>
    </f:DynamicPage>
</mvc:View>
